}

@article{saad_temperature-based_2014,
	title = {A temperature-based energy solver for nonlinear phase transformations deduced from thermodynamic equilibrium in multicomponent alloys},
	abstract = {In the following paper, we present a new algorithm for solving energy balance in phase change problems, particularly in solidification with macrosegregation. The algorithm is based on a nonlinear Newton temperature evaluation using the average enthalpy which is provided by i) tabulated solidification paths  and ii) tabulated phase enthalpies. The compatibility of this method with thermodynamic tabulations allows simulating solidification at equilibrium with multiple phase transformations for binary and multicomponent alloys. It retains its accuracy when capturing the latent heat with respect to the enthalpy method with the advantage of being faster in terms of computation time. The method has been validated and applied to three-dimensional cases with macrosegregation: a binary Sn-3wt\% Pb alloy and a ternary Fe-2 wt\% C-30 wt\% Cr alloy. For the latter case, predictions include composition maps for C and Cr as well as distribution of liquid, {BCC}, {FCC}, M7C3 and Cementite phases},
	journal = {to be submitted},
	author = {Saad, Ali and Gandin, Charles-André and Bellet, Michel},
	year = {2014},
	keywords = {energy conservation, finite element, nonlinear problems, solidification}
}

@inproceedings{genereux_characterization_2000,
