@article{yuan_new_2012,
	title = {A new mechanism for freckle initiation based on microstructural level simulation},
	volume = {60},
	issn = {1359-6454},
	url = {http://www.sciencedirect.com/science/article/pii/S1359645412003205},
	doi = {10.1016/j.actamat.2012.04.043},
	abstract = {Freckle formation was directly simulated in three dimensions with a microstructure level model for unidirectional solidified Pb–Sn alloys. The microscale solidification model resolves the complex interaction of solute partition, interdendritic thermosolutal convection, dendrite formation and remelting. These simulations show that it is competition between all off these phenomena at the microstructural level that determines both the initiation and survival of solute channels and, hence, the propensity for freckle formation. The solute enriched interdendritic flow remelts both primary and secondary arms, and can deflect the primaries. This enables solutal channels to become self-sustaining, forming freckles. The microstructural model was then applied to predict the critical Rayleigh number, with excellent agreement with a large range of experimental data, demonstrating its potential for applications to new alloy systems and solidification processes.},
	number = {12},
	urldate = {2014-07-19TZ},
	journal = {Acta Materialia},
	author = {Yuan, Lang and Lee, Peter D.},
	month = jul,
	year = {2012},
	keywords = {Computational model, Defect, Dendrite formation, Directional solidification, Thermosolutal convection},
	pages = {4917--4926}
}

@article{pardeshi_explicitimplicit_2008,
	title = {An explicit–implicit time stepping scheme for solidification models},
